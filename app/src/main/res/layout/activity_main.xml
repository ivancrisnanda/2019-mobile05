<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_static_fragment"
        android:layout_width="301dp"
        android:layout_height="52dp"
        android:layout_marginTop="212dp"
        android:onClick="handlerClickStaticFragment"
        android:text="Contoh Static Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_dynamic_fragment"
        android:layout_width="305dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:onClick="handlerClickDynamicFragment"
        android:text="Contoh Dynamic Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_static_fragment" />

    <Button
        android:id="@+id/btn_praktikum_fragment"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:onClick="handlerClickPraktikumFragment"
        android:text="Tugas Praktikum Fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dynamic_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>